<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tidewater_comp_2023.Pages.ExpandAnnouncement"
             Title="ExpandAnnouncement">
    <Grid Margin="50, 40, 50, 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" 
            x:Name="lbl_title" FontFamily="SegoeUIBold" FontSize="20"/>

        <ScrollView Grid.Row="1" Margin="0, 0, 0, 20">
            <Label x:Name="lbl_description" />
        </ScrollView>

        <Button Grid.Row="2" Text="Back" Clicked="Button_OnClicked"/>
    </Grid>
</ContentPage>