<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tidewater_comp_2023.Pane.ChatBubblePane">
    <Frame x:Name="Bubble" CornerRadius="100" WidthRequest="250" BorderColor="Transparent" HorizontalOptions="End" Margin="30, 10, 30, 10">
        <VerticalStackLayout>
            <Image x:Name="Image" />
            <Label x:Name="TextLabel" FontSize="18"/>
            <Label x:Name="DateLabel" FontSize="16" TextColor="Gray" HorizontalOptions="End" Margin="0, 0, 15, 0"/>
        </VerticalStackLayout>
    </Frame>
</ContentView>
